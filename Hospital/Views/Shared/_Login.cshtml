@if (Session["email"] != null)
{
    <li>@Html.ActionLink(Convert.ToString(Session["email"]), "Index", "Login")</li>
    using (Html.BeginForm("LogOut", "Login", FormMethod.Post))
    {
        <li><a href="javascript:;" onclick="document.forms[0].submit();">Logout</a></li>
    }
}
else
{
    <li>@Html.ActionLink("Login", "Login", "Login")</li>
    <li>@Html.ActionLink("Sign Up", "Register", "Login")</li>
}